    "version": "0.2.0",
    "configurations": [
        {
            "name": "request replicate",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "request",
                "--conf",  "~/weewx-data/run/weewx.conf",
                //"--timestamp", "0",
                "--host", "weather-data.local",
                "--instance-name", "weather",
                "--primary-binding", "wx_binding",
                "--secondary-binding", "secondarydb_binding",
            ]
        },        
        {
            "name": "respond replicate",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "respond",
                "--conf",  "~/weewx-data/run/weewx.conf",
                "--host", "weather-data.local",
                "--instance-name", "weather",
                "--data-binding", "wx_binding",
            ]
        },
        {
            "name": "weewxd: Full install",
            "type": "debugpy",
            "request": "launch",  
            "program": "~/weewx/src/weewxd.py",
            "args": [
                "--config", "~/weewx-data/weewx.conf"
            ],            
            "console": "integratedTerminal"
        },              
    ]
}